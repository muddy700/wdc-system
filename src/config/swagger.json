  "definitions": {
    "LoginInfo": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "required": true,
          "example": "jdoe@gmail.com"
        },
        "password": {
          "type": "string",
          "required": true,
          "example": "12345678"
        }
      }
    },
    "ChangePasswordInfo": {
      "type": "object",
      "properties": {
